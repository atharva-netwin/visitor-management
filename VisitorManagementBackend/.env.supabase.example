# Supabase Environment Configuration
# Copy this file to .env.production for deployment

# Server Configuration
NODE_ENV=production
PORT=3000

# Supabase Database Configuration
# Get these values from your Supabase project settings > Database
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-supabase-database-password
DB_SSL=true

# Redis Configuration (for production, use a cloud Redis service)
# You can use Upstash Redis (free tier) or Redis Labs
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Secrets (IMPORTANT: Generate strong secrets for production)
JWT_ACCESS_SECRET=your-super-secure-access-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Origins (Add your mobile app and web app domains)
CORS_ORIGINS=http://localhost:3000,https://your-app-domain.com

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Rate Limiting (adjust based on your needs)
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_WINDOW_MS=900000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_SYNC_WINDOW_MS=300000
RATE_LIMIT_SYNC_MAX=10